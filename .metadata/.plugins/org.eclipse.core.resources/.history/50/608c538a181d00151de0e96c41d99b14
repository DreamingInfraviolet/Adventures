import java.util.ArrayDeque;

public class SceneLocation
{
	ArrayDeque<Section> mLocationStack = new ArrayDeque<>(); //a stack representing the location as a series of steps from the Parent.
	
	//adds a location to the front of the stack, effectively entering a location within the current location.
	void addLocationToFront(Section locationName)
	{
		mLocationStack.addLast(locationName);
	}
	
	//Adds a location to the back of the stack, essentially adding a starting location condition.
	void addLocationToBack(Section locationName)
	{
		mLocationStack.addFirst(locationName);
	}
}

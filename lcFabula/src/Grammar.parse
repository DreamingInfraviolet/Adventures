S ::= SECTION_CONTENT

SECTION_DECLARATION ::= [ identifier ] SECTION_CONTENT

SECTION_CONTENT ::= SECTION SECTION_CONTENT
SECTION_CONTENT ::= scene identifier { SCENE } SECTION_CONTENT
SECTION_CONTENT ::= Nil

SCENE ::= string string? CHOICES

CHOICES ::= GOTO | CHOICE_LIST

CHOICE_LIST ::= CHOICE CHOICE* GOTO?

CHOICE ::= choice { string string? GOTO? }

GOTO ::= goto LOCATION

LOCATION ::= (arrow_right|arrow_left)* (identifier(arrow_right|arrow_left) identifier)+